#############################################
# Server Environment Variables (Example)
# Copy to server/.env and fill in values.
# Remove any unused sections to reduce risk.
#############################################

#############################################
# Web server
#############################################
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

#############################################
# MongoDB (leave blank to disable persistence; server will run in NO_DB mode)
#############################################
# Example (Atlas): mongodb+srv://USER:PASS@cluster0.xxxxx.mongodb.net/invoiceChainDB?retryWrites=true&w=majority
MONGODB_URI=

#############################################
# Blockchain / RPC (local Hardhat or testnet)
#############################################
RPC_URL=http://localhost:8545
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
PRIVATE_KEY=YOUR_PRIVATE_KEY_0x_PREFIXED
CONTRACT_ADDRESS=

#############################################
# IPFS / Pinata (choose one auth method or leave blank for local fallback)
#############################################
PINATA_JWT=
PINATA_API_KEY=
PINATA_SECRET_KEY=
PINATA_DISABLED=false
WEB3_STORAGE_TOKEN=
IPFS_GATEWAY=https://cyan-glamorous-tarsier-110.mypinata.cloud/ipfs/

#############################################
# Firebase Admin (optional: keep JSON file outside VCS)
#############################################
FIREBASE_ADMIN_ENABLED=false
FIREBASE_ADMIN_CREDENTIALS_JSON=
FIREBASE_CREDENTIALS_FILE=./config/serviceAccountKey.json
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nREPLACE\n-----END PRIVATE KEY-----\n"
#############################################
# AI
#############################################
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

#############################################
# Email / Notifications (optional)
#############################################
EMAIL_PROVIDER=
SENDGRID_API_KEY=
SENDGRID_FROM=no-reply@invoice-chain.local
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_BASE_URL=https://api.mailgun.net
MAILGUN_FROM=no-reply@yourdomain.com

#############################################
# Stripe (optional)
#############################################
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
CLIENT_URL=http://localhost:3000

#############################################
# Security notes:
# 1. Do not paste production private keys here.
# 2. Use separate .env for local vs deployment.
# 3. Rotate any key that was exposed.
# 4. Avoid enabling Firebase admin unless needed.
#############################################
