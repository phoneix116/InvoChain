# Server environment example
# Web server
PORT=3002

# MongoDB
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# IPFS / Pinata (choose one auth method or disable)
# Set either JWT or API key + secret; leave blank to use local storage fallback
PINATA_JWT=
PINATA_API_KEY=
PINATA_SECRET_KEY=
# To disable Pinata and force local storage, set to true
PINATA_DISABLED=false

# Optional alternate gateway for building links
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# Blockchain / RPC
RPC_URL=http://localhost:8545
