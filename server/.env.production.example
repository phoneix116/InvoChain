#############################################
# Production Environment Variables Template
# For Render.com Deployment
# Copy these to Render Dashboard â†’ Environment Variables
#############################################

#############################################
# Web server
#############################################
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

#############################################
# MongoDB Atlas (Production Database)
#############################################
MONGODB_URI=your_mongodb_connection_string_here

#############################################
# Blockchain / RPC
#############################################
SEPOLIA_RPC_URL=your_infura_or_alchemy_url_here
PRIVATE_KEY=your_wallet_private_key_here
CONTRACT_ADDRESS=your_deployed_contract_address_here

#############################################
# IPFS / Pinata
#############################################
PINATA_JWT=your_pinata_jwt_token_here
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
PINATA_DISABLED=false
IPFS_GATEWAY=your_pinata_gateway_url_here

#############################################
# Firebase Admin
#############################################
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key_here
FIREBASE_ADMIN_ENABLED=true

#############################################
# AI (Optional)
#############################################
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

#############################################
# Email / Notifications
#############################################
EMAIL_PROVIDER=mailgun
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain
MAILGUN_BASE_URL=https://api.mailgun.net
MAILGUN_FROM=Your App Name <no-reply@your-domain.com>

#############################################
# Stripe (Optional)
#############################################
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

#############################################
# CORS & Client Configuration
#############################################
CORS_ALLOWED_ORIGINS=https://your-frontend-url.vercel.app,https://your-frontend-url.netlify.app
CLIENT_URL=https://your-frontend-url.vercel.app

#############################################
# SECURITY NOTES:
# 1. Never commit this file with real values
# 2. Add all these in Render Dashboard manually
# 3. Keep Firebase private key format: use \n for newlines
# 4. Update CORS origins with your actual frontend URL
# 5. Use separate keys for production vs development
#############################################
