# Frontend environment example
# Copy to client/.env and restart dev server

#############################################
# API / Backend
#############################################
REACT_APP_API_URL=http://localhost:3001
REACT_APP_CLIENT_URL=http://localhost:3000

#############################################
# IPFS
#############################################
REACT_APP_IPFS_GATEWAY=
#############################################
# Contract (auto-injected by deploy script; override if needed)
#############################################
REACT_APP_CONTRACT_ADDRESS=

#############################################
# Firebase (client SDK) - optional
#############################################
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_APP_ID=
REACT_APP_FIREBASE_MEASUREMENT_ID=
REACT_APP_FIREBASE_STORAGE_BUCKET=

#############################################
# Feature Flags / Demo
#############################################
REACT_APP_DEV_SKIP_ONCHAIN=false
REACT_APP_DEMO_ETH_USD=3000

#############################################
# Local Dev
#############################################
PORT=3000

#############################################
# Security Notice: All REACT_APP_ vars are public.
# Do NOT put private keys or secrets here.
#############################################
